{
  "mcpServers": {
    "my-calculator": {
      "type": "stdio",
      "command": "python",
      "args": [
        "mcp_server/calculator_server.py"
      ],
      "disabled": true
    },
    "my-news": {
      "type": "stdio",
      "command": "python",
      "args": [
        "mcp_server/news_server.py"
      ]
    },
    "my-search": {
      "type": "stdio",
      "command": "python",
      "args": [
        "mcp_server/search_server.py"
      ],
      "disabled": true
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "disabled": true
    },
    "binance": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@snjyor/binance-mcp@latest"
      ],
      "disabled": true
    }
  }
}