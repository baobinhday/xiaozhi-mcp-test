{
    "mcpServers": {
        "calculator": {
            "type": "stdio",
            "command": "python",
            "args": [
                "mcp_server/calculator_server.py"
            ],
            "disabled": false
        },
        "search_and_news": {
            "type": "stdio",
            "command": "python",
            "args": [
                "mcp_server/search_server.py"
            ]
        },
        "perplexity": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "perplexity-mcp"
            ],
            "env": {
                "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
            }
        }
    }
}