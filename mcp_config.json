{
    "mcpServers": {
        "calculator": {
            "type": "stdio",
            "command": "python",
            "args": [
                "mcp_server/calculator_server.py"
            ],
            "disabled": false
        },
        "search_and_news": {
            "type": "stdio",
            "command": "python",
            "args": [
                "mcp_server/search_server.py"
            ]
        },
        "context7": {
            "type": "http",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
            },
            "disabled": true
        }
    }
}